package addressbook_231222;

import java.util.Scanner;

public class Java04 {

	public static void main(String[] args) {

		
		while(true){
			Scanner s=new Scanner(System.in);
			for(int j=0;j<=4;j++) {
				System.out.print("이름 : ");
				String name=s.next();
				System.out.print("국어 : ");
				int kor=s.nextInt();
				System.out.print("영어 : ");
				int eng=s.nextInt();
				System.out.print("수학 : ");
				int math=s.nextInt();
				System.out.println(name+"의 평균은 "+(kor+eng+math)/3+" 입니다");
			}
	
//			if(입력한값.equals("quit")){
//				break;
			}
		}

		
	}


