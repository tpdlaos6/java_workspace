		Scanner s=new Scanner(System.in);
		for(int j=0;j<=4;j++) {
			System.out.print("이름 : ");
			String name=s.next();
			System.out.print("국어 : ");
			int kor=s.nextInt();
			System.out.print("영어 : ");
			int eng=s.nextInt();
			System.out.print("수학 : ");
			int math=s.nextInt();
			System.out.print(name+"의 평균은 "+(kor+eng+math)/3+" 입니다");
		}
	}
